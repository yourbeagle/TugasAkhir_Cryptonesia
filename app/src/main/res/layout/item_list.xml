<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="3dp"
    android:id="@+id/cardView"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:id="@+id/rlItemTrack">

        <ImageView
            android:id="@+id/ivImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/gambar_hp1" />

        <TextView
            android:id="@+id/tvSymbol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            android:fontFamily="@font/poppins"
            android:layout_toLeftOf="@id/tvPrice"
            android:layout_toRightOf="@id/ivImage"
            android:padding="3dp"
            android:text="Symbol"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvSymbol"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            android:layout_toRightOf="@id/ivImage"
            android:fontFamily="@font/poppins"
            android:padding="3dp"
            android:text="Symbol" />

        <TextView
            android:id="@+id/percent1h"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvName"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/ivImage"
            android:fontFamily="@font/poppins"
            android:padding="3dp"
            android:text="1h : "
            android:textSize="12sp" />

        <TextView
            android:id="@+id/percent24h"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvName"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/percent1h"
            android:fontFamily="@font/poppins"
            android:padding="3dp"
            android:text="24h : "
            android:textSize="12sp" />

        <TextView
            android:id="@+id/percent7d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvName"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/percent24h"
            android:fontFamily="@font/poppins"
            android:text="7d : "
            android:padding="3dp"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/poppins"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp"
            android:padding="3dp"
            android:text="Rate" />

        <ImageView
            android:id="@+id/ivSparkline"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_below="@id/tvPrice"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/gambar_hp1" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>